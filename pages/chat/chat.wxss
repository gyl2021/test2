.container {
  padding: 24rpx;
  box-sizing: border-box;
}

.chat-list {
  flex: 1;
  height: calc(100vh - 140rpx);
}

.message-item {
  margin-bottom: 24rpx;
  display: flex;
  flex-direction: column;
}

.message-item.user {
  align-items: flex-end;
}

.message-item.assistant {
  align-items: flex-start;
}

.bubble {
  max-width: 80%;
  padding: 20rpx 24rpx;
  border-radius: 20rpx;
  background: #ffffff;
  box-shadow: 0 6rpx 16rpx rgba(15, 20, 30, 0.08);
}

.message-item.user .bubble {
  background: #4f8ef7;
  color: #ffffff;
}

.content {
  font-size: 28rpx;
  line-height: 1.6;
  letter-spacing: 0.5rpx;
  word-break: break-word;
}

.references {
  margin-top: 12rpx;
  padding: 16rpx;
  border-radius: 16rpx;
  background: #f0f4ff;
  width: 100%;
  box-sizing: border-box;
}

.references-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 12rpx;
}

.references-title {
  font-size: 24rpx;
  font-weight: 600;
  color: #3d4c78;
}

.references-count {
  font-size: 22rpx;
  color: #7a869a;
}

.reference-item {
  padding: 12rpx;
  border-radius: 12rpx;
  background: #ffffff;
  box-shadow: 0 4rpx 10rpx rgba(61, 76, 120, 0.08);
  margin-bottom: 12rpx;
}

.reference-item:last-child {
  margin-bottom: 0;
}

.reference-row {
  display: flex;
  align-items: flex-start;
  margin-bottom: 6rpx;
}

.reference-row:last-child {
  margin-bottom: 0;
}

.reference-label {
  min-width: 64rpx;
  font-size: 22rpx;
  color: #7a869a;
  margin-right: 12rpx;
}

.reference-name {
  font-size: 24rpx;
  font-weight: 600;
  color: #3d4c78;
  flex: 1;
  word-break: break-word;
}

.reference-meta,
.reference-link {
  font-size: 22rpx;
  color: #4a5676;
  flex: 1;
  word-break: break-word;
}

.reference-link {
  color: #3b6df6;
}

.input-bar {
  margin-top: 16rpx;
  display: flex;
  gap: 16rpx;
  align-items: center;
}

.input {
  flex: 1;
  background: #ffffff;
  border-radius: 16rpx;
  padding: 16rpx;
  font-size: 28rpx;
  box-shadow: 0 6rpx 16rpx rgba(15, 20, 30, 0.08);
}

.send-button {
  min-width: 120rpx;
}
